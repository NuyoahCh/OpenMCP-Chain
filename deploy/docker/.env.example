# Application
OPENMCP_CONFIG=/etc/openmcp/config/openmcp.json
OPENMCP_DATA_DIR=/var/lib/openmcp
LOG_LEVEL=info

# Database configuration for MySQL driver
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=openmcp
MYSQL_USER=openmcp
# MYSQL_PASSWORD will be injected from MYSQL_PASSWORD_FILE secret

# OpenAI provider configuration
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
