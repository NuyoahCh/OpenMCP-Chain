{
  "server": {
    "address": ":8080"
  },
  "storage": {
    "task_store": {
      "driver": "memory",
      "retries": 3
    },
    "auth_store": {
      "driver": "memory"
    }
  },
  "llm": {
    "provider": "openai",
    "python_bridge": {
      "enabled": false,
      "python_executable": "python3",
      "script_path": "scripts/llm_bridge.py",
      "working_dir": ".."
    },
    "openai": {
      "enabled": true,
      "api_key_env": "OPENAI_API_KEY",
      "base_url": "https://api.openai.com/v1",
      "model": "gpt-4o-mini",
      "timeout_seconds": 60
    }
  },
  "agent": {
    "memory_depth": 5
  },
  "knowledge": {
    "source": "../configs/knowledge/tutorial.json",
    "max_results": 3
  },
  "web3": {
    "rpc_url": "http://localhost:8545",
    "chain_config": "../configs/chain.yaml",
    "default_chain": "local-ethereum"
  },
  "runtime": {
    "data_dir": "../data"
  },
  "task_queue": {
    "driver": "memory",
    "worker": 4
  },
  "observability": {
    "logging": {
      "level": "info",
      "format": "json",
      "outputs": ["stdout"]
    },
    "metrics": {
      "enabled": true,
      "address": ""
    },
    "audit": {
      "enabled": true,
      "file": "../data/audit.log",
      "max_size_mb": 100,
      "max_backups": 7,
      "max_age_days": 30
    }
  },
  "auth": {
    "mode": "disabled",
    "jwt": {
      "issuer": "openmcpd",
      "audience": "openmcpd-clients",
      "access_token_ttl_seconds": 3600,
      "refresh_token_ttl_seconds": 86400
    },
    "oauth": {
      "timeout_seconds": 15,
      "username_claim": "preferred_username"
    },
    "seeds": [
      {
        "username": "admin",
        "password": "admin123",
        "roles": ["admin"],
        "permissions": ["tasks.read", "tasks.write"]
      }
    ]
  }
}
