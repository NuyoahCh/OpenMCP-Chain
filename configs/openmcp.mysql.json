{
  "server": {
    "address": ":8080"
  },
  "storage": {
    "task_store": {
      "driver": "mysql",
      "dsn": "openmcp:openmcp@tcp(127.0.0.1:3306)/openmcp?parseTime=true&loc=Local"
    }
  },
  "llm": {
    "provider": "openai",
    "python_bridge": {
      "enabled": false,
      "python_executable": "python3",
      "script_path": "scripts/llm_bridge.py",
      "working_dir": ".."
    },
    "openai": {
      "enabled": true,
      "api_key_env": "OPENAI_API_KEY",
      "base_url": "https://api.openai.com/v1",
      "model": "gpt-4o-mini",
      "timeout_seconds": 60
    }
  },
  "agent": {
    "memory_depth": 5
  },
  "knowledge": {
    "source": "../configs/knowledge/tutorial.json",
    "max_results": 3
  },
  "web3": {
    "rpc_url": "http://localhost:8545"
  },
  "runtime": {
    "data_dir": "../data"
  }
}
